<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/toolbar"
                                   android:layout_width="match_parent"
                                   android:layout_height="?android:attr/actionBarSize"
                                   android:background="@color/transparent"
                                   app:contentInsetStart="@null">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        tools:background="@color/black_12">

        <FrameLayout
            android:id="@+id/sort_click_consumer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/sort"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_button_round"
                app:srcCompat="@drawable/ic_filter_inactive"
                />
        </FrameLayout>

        <ImageView
            android:id="@+id/logo_title"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/layer_mainlogo_inverse"
            tools:background="@color/black_12"
            android:visibility="visible"/>

        <FrameLayout
            android:id="@+id/filter_click_consumer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/filter_toggle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:visibility="visible"
                app:srcCompat="@drawable/selector_timeline_family"
                />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/buttons_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/activity_margin"
            android:layout_toEndOf="@id/sort_click_consumer"
            android:weightSum="1"
            android:visibility="invisible"
            android:baselineAligned="false">

            <FrameLayout
                android:id="@+id/sort_loved"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".33333333333">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|end"
                    app:srcCompat="@drawable/selector_sort_loved"
                    android:duplicateParentState="true"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/sort_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".33333333333">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|end"
                    app:srcCompat="@drawable/selector_sort_recent"
                    android:duplicateParentState="true"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/sort_shuffle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".33333333333">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|end"
                    app:srcCompat="@drawable/selector_sort_shuffle"
                    android:duplicateParentState="true"
                    />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>