<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/toolbar"
                                   android:layout_width="match_parent"
                                   android:layout_height="?android:actionBarSize"
                                   app:contentInsetStart="0dp"
                                   android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        tools:background="@color/black_12">

        <FrameLayout
            android:id="@+id/notification_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="6dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_button_round">

            <ImageView
                android:id="@+id/notifications_btn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/layer_notifications"/>

            <View
                android:id="@+id/notification_dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/layer_notifications_badge"
                android:visibility="visible"/>
        </FrameLayout>

        <TextView
            android:id="@+id/notifications_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/notification_btn_layout"
            tools:text="@string/notifications_unread_count"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/logo_title"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/layer_mainlogo_inverse"
            tools:background="@color/black_12"
            android:visibility="visible"/>

        <FrameLayout
            android:id="@+id/settings_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/selector_button_round">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/layer_settings"/>
        </FrameLayout>
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>