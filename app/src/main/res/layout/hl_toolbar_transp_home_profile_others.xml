<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="?android:actionBarSize"
                                   android:background="@color/transparent"
                                   app:contentInsetStart="0dp"
                                   app:contentInsetEnd="@dimen/activity_margin_lg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        tools:background="@color/black_12">

        <FrameLayout
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/activity_margin_lg"
            android:paddingEnd="@dimen/activity_margin_lg"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/layer_back_white"
                android:layout_gravity="center_vertical"
                />
        </FrameLayout>

        <ImageView
            android:id="@+id/logo_title"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/layer_mainlogo_inverse"
            tools:background="@color/black_12"
            android:visibility="visible"/>

        <FrameLayout
            android:id="@+id/dots"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/layer_more"/>

        </FrameLayout>

    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>