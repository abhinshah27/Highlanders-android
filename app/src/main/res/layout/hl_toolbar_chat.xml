<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/toolbar"
                                   android:layout_width="match_parent"
                                   android:layout_height="?android:actionBarSize"
                                   app:contentInsetStart="0dp"
                                   android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <FrameLayout
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/activity_margin_lg"
            android:paddingEnd="@dimen/activity_margin"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <!-- TODO from mockup it's black and 24dp -->

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_back_accent"
                android:layout_gravity="center_vertical"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/toReadCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/backArrow"
            tools:text="12"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:includeFontPadding="false"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/logo_title"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_highlanders_main_logo"
            tools:background="@color/black_12"
            android:visibility="visible"/>
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>